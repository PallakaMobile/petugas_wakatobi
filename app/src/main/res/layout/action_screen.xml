<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_no_data_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/no_data"
        android:textColor="@color/TextSubtitle"
        android:textSize="@dimen/text_size_extra_large2"
        android:visibility="gone" />

    <ps.petugas.salam.wakatobi.support.xrecyclerview.XRecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rv_action_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>